<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true">
	<testsuites>
		<testsuite name="Pluf">
			<directory>tests/Captcha/</directory>
			<directory>tests/Captcha_Engine_ReCaptcha/</directory>
			<directory>tests/Captcha_Engine_NoCaptcha/</directory>
			<directory>tests/Captcha_Middleware/</directory>
		</testsuite>
	</testsuites>

	<!-- Code coverage -->
	<filter>
		<whitelist addUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">src</directory>
		</whitelist>
	</filter>
	<logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
	</logging>
</phpunit>